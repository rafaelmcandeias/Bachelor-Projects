CC   = gcc
LD   = gcc
CFLAGS = -Wall -std=gnu99 -I../ -g
LDFLAGS = -lm -pthread	#Flag para compilar com threads

# A phony target is one that is not really the name of a file
# https://www.gnu.org/software/make/manual/html_node/Phony-Targets.html
.PHONY: all clean run1 run4

all: tecnicofs

#TECNICOFS:
#compilacao do ficheiro locks.o
fs/locks.o: fs/locks.c fs/locks.h
	$(CC) $(CFLAGS) -o fs/locks.o -c fs/locks.c

#compilacao do ficheiro state.o
fs/state.o: fs/state.c fs/state.h fs/locks.h tecnicofs-api-constants.h
	$(CC) $(CFLAGS) -o fs/state.o -c fs/state.c

#compilacao do ficheiro operations.o
fs/operations.o: fs/operations.c fs/operations.h fs/state.h tecnicofs-api-constants.h
	$(CC) $(CFLAGS) -o fs/operations.o -c fs/operations.c

#compilacao do ficheiro main.o
main.o: main.c fs/operations.h fs/state.h fs/locks.h tecnicofs-api-constants.h
	$(CC) $(CFLAGS) -o main.o -c main.c

#criacao do ficheiro executavel tecnicofs
tecnicofs: fs/locks.o fs/state.o fs/operations.o main.o
	$(LD) $(CFLAGS) $(LDFLAGS) -o tecnicofs fs/locks.o fs/state.o fs/operations.o main.o

clean:
	@echo Cleaning...
	rm -f fs/*.o *.o *.txt tecnicofs


run1: tecnicofs
	valgrind ./tecnicofs inputs/test1.txt outputs/out1.txt 4
	cat outputs/out1.txt

run2: tecnicofs
	valgrind ./tecnicofs inputs/test2.txt outputs/out2.txt 4

run3: tecnicofs
	valgrind ./tecnicofs inputs/test3.txt outputs/out2.txt 4

run4: tecnicofs
	valgrind ./tecnicofs inputs/test4.txt outputs/out4.txt 4
	cat outputs/out4.txt

run5: tecnicofs
	valgrind ./tecnicofs inputs/test5.txt outputs/out5.txt 6

	cat outputs/out5.txt

run6: tecnicofs
	valgrind ./tecnicofs inputs/test6.txt outputs/out6.txt 4
	cat outputs/out6.txt

simple: tecnicofs
	valgrind ./tecnicofs inputs/c-l.txt outputs/c-l.txt 1

m: tecnicofs
	valgrind ./tecnicofs inputs/m.txt outputs/m.txt 1
